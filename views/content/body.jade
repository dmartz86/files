.container(ng-controller='Controller')
  form(action="/files", method="post", enctype="multipart/form-data")
    .jumbotron
      h1 File Uploader
      p Select files to upload
      .row
        a.col-md-1.btn.btn-success.btn-lg(ng-click="add()") Add
        a.col-md-1.btn.btn-danger.btn-lg(ng-click="clean()") Clean
        .col-md-6
        a.col-md-2.btn.btn-success.btn-lg(ng-click="list()") Get List
        button.col-md-2.btn.btn-primary.btn-lg(type="submit") Send Files
      .row
        hr
      .row
        .form-group
          .row.imagelist
            .col-md-4(ng-repeat="img in imageList")
              input.btn.btn-lg.form-control(ng-model="img.name", 
                type="file", name="fileUploaded", 
                requiered="requiered")
  .row
    div(ng-repeat="file in serverImagesList")
      a.col-md-4.btn.btn-primary(ng-bind="getName(file.name)",
        ng-href="{{'/download/'+file._id}}")
